{% extends 'base.html.twig' %}

{% block title %}Create New Elevator System{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1 class="card-title">Create New Elevator System</h1>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_elevator_system_new') }}">
                <div class="mb-3">
                    <label for="num_elevators" class="form-label">Number of Elevators</label>
                    <input type="number" class="form-control" id="num_elevators" name="num_elevators" min="1" max="10" value="2" required>
                    <div class="form-text">Enter the number of elevators in the system (1-10)</div>
                </div>
                <div class="mb-3">
                    <label for="max_floor" class="form-label">Maximum Floor</label>
                    <input type="number" class="form-control" id="max_floor" name="max_floor" min="1" value="10" required>
                    <div class="form-text">Enter the highest floor number</div>
                </div>
                <div class="mb-3">
                    <label for="min_floor" class="form-label">Minimum Floor</label>
                    <input type="number" class="form-control" id="min_floor" name="min_floor" value="0" required>
                    <div class="form-text">Enter the lowest floor number (can be negative for basements)</div>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="{{ path('app_elevator_system_index') }}" class="btn btn-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create System</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
